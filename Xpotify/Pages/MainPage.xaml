<Page
    x:Class="Xpotify.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xpotify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Xpotify.Controls"
    xmlns:vm="using:Xpotify.ViewModels"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <Storyboard x:Name="splashScreenToLightStoryboard">
                <ColorAnimation Storyboard.TargetName="splashScreen"
                                Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                To="#D1D3D3"
                                Duration="0:0:0.6">
                    <ColorAnimation.EasingFunction>
                        <ExponentialEase />
                    </ColorAnimation.EasingFunction>
                </ColorAnimation>
                <ColorAnimation Storyboard.TargetName="splashProgressRing"
                                Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                To="Black"
                                Duration="0:0:0.6">
                    <ColorAnimation.EasingFunction>
                        <ExponentialEase />
                    </ColorAnimation.EasingFunction>
                </ColorAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid x:Name="mainGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="SplashScreen">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MainScreenQuick">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="ClosedQuick" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MainScreen">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Closed" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="ShowExtraButtons">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="CompactOverlay">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Closed" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="ShowExtraButtons">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="False" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="nowPlaying"
                                                       Storyboard.TargetProperty="ViewMode">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="CompactOverlay" />
                        </ObjectAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="nowPlaying"
                                                       Storyboard.TargetProperty="IsOpen">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="xpotifyWebView"
                                                       Storyboard.TargetProperty="IsOpen">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="False" />
                        </ObjectAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="NowPlaying">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Closed" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="ShowExtraButtons">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="nowPlaying"
                                                       Storyboard.TargetProperty="ViewMode">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Normal" />
                        </ObjectAnimationUsingKeyFrames>
                        
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="nowPlaying"
                                                       Storyboard.TargetProperty="IsOpen">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="xpotifyWebView"
                                                       Storyboard.TargetProperty="IsOpen">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="False" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>

                        <DoubleAnimation Storyboard.TargetName="nowPlaying" 
                                         Storyboard.TargetProperty="Opacity"
                                         Duration="0:0:0.3" From="0" To="1">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="NowPlayingClosing">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="splashScreen"
                                                       Storyboard.TargetProperty="SplashState">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Closed" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="topBar"
                                                       Storyboard.TargetProperty="ShowExtraButtons">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>

                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="nowPlaying"
                                                       Storyboard.TargetProperty="IsOpen">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="False" />
                        </ObjectAnimationUsingKeyFrames>

                        <DoubleAnimation Storyboard.TargetName="nowPlaying" 
                                         Storyboard.TargetProperty="Opacity"
                                         Duration="0:0:0.2" From="1" To="0">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:XpotifyWebApp x:Name="xpotifyWebView"
                                MinWidth="500"
                                MinHeight="500"
                                PageLoaded="XpotifyWebView_PageLoaded"
                                WebAppLoaded="XpotifyWebView_WebAppLoaded"
                                ActionRequested="XpotifyWebView_ActionRequested"/>

        <controls:FlyoutContainer x:Name="flyoutContainer" />

        <controls:SplashScreen x:Name="splashScreen" SplashState="Visible" />

        <controls:NowPlayingView x:Name="nowPlaying"
                                 IsOpen="False" />

        <controls:TopBar x:Name="topBar" 
                         OpenSpotifyUriRequested="TopBar_OpenSpotifyUriRequested"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Stretch" />
    </Grid>
</Page>
