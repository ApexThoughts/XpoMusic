<Page
    x:Class="ModernSpotifyUWP.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernSpotifyUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ModernSpotifyUWP.ViewModels"
    xmlns:converters="using:ModernSpotifyUWP.Classes.Converters"
    mc:Ignorable="d"
    Width="400"
    Height="500"
    Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <converters:LanguageToStringConverter x:Key="LanguageToStringConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Page.DataContext>
        <vm:SettingsViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="Content" Padding="14">
                <StackPanel Margin="0,0,0,24" Visibility="Visible">
                    <TextBlock Text="Interface language:" />
                    <ComboBox ItemsSource="{x:Bind ViewModel.Languages, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}"
                              Margin="0,8,0,0" 
                              Width="200">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource LanguageToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="You'll need to close and reopen Xpotify for this change to take effect."
                               TextWrapping="Wrap"
                               Foreground="Red"
                               Visibility="{x:Bind ViewModel.LanguageRestartNeededNoticeVisibility, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
