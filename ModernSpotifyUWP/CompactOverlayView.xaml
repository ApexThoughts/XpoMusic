<UserControl
    x:Class="ModernSpotifyUWP.CompactOverlayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernSpotifyUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="280"
    d:DesignWidth="400">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="songName.Visibility" Value="Visible" />
                        <Setter Target="artistName.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="270" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="albumArtContainer.Visibility" Value="Visible" />
                        <Setter Target="songName.Visibility" Value="Visible" />
                        <Setter Target="artistName.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <Grid Background="White">
            <Image x:Name="artistArt" />
        </Grid>
        <Grid Background="#66000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid x:Name="albumArtContainer" 
                      Background="#dadada" 
                      Visibility="Collapsed"
                      HorizontalAlignment="Center">
                    <Image x:Name="albumArt"
                           Width="100" 
                           Height="100" />
                </Grid>
                <TextBlock x:Name="songName"
                           Text="Hello"
                           Margin="0,12,0,0"
                           Visibility="Collapsed"
                           TextAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock x:Name="artistName"
                           Text="Evanescense"
                           Margin="0,4,0,16"
                           Visibility="Collapsed"
                           TextAlignment="Center"
                           FontWeight="Normal" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="prevTrackButton" 
                            Background="Transparent"
                            ToolTipService.ToolTip="Previous track">
                        <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="24" Glyph="&#xE100;" />
                    </Button>
                    <Button x:Name="playButton" 
                            Background="Transparent"
                            ToolTipService.ToolTip="Play">
                        <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="32" Glyph="&#xE102;" />
                    </Button>
                    <Button x:Name="pauseButton" 
                            Background="Transparent" 
                            Visibility="Collapsed"
                            ToolTipService.ToolTip="Pause">
                        <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="32" Glyph="&#xE103;" />
                    </Button>
                    <Button x:Name="nextTrackButton" 
                            Background="Transparent" 
                            ToolTipService.ToolTip="Next track">
                        <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="24" Glyph="&#xE101;" />
                    </Button>
                </StackPanel>
            </StackPanel>
            <Button x:Name="closeCompactOverlayButton"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    ToolTipService.ToolTip="Exit mini view"
                    Click="CloseCompactOverlayButton_Click">
                <Grid Margin="2,3,2,-4">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left"
                              FontSize="20" 
                              Glyph="&#xE7FB;" />
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              VerticalAlignment="Top"
                              HorizontalAlignment="Left"
                              FontSize="10" 
                              Margin="6.5,1.5,0,0"
                              Glyph="&#xEB9F;" />
                </Grid>
            </Button>
            <ProgressBar VerticalAlignment="Bottom"
                         Value="40"
                         Maximum="100"
                         Foreground="#aaffffff" />
        </Grid>
    </Grid>
</UserControl>
